<project>
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jvnet.sorcerer</groupId>
    <artifactId>sorcerer</artifactId>
    <version>0.1-SNAPSHOT</version>
  </parent>

  <groupId>org.jvnet.sorcerer</groupId>
  <artifactId>sorcerer-core</artifactId>
  <name>Sorcerer Core</name>

  <packaging>jar</packaging>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>org/jvnet/sorcerer/frame/java/**/*</exclude>
          <exclude>**/Thumbs.db</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-antlr-plugin</artifactId>
        <configuration>
          <sourceDirectory>${basedir}</sourceDirectory>
          <grammars>java.g</grammars>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>antlr</groupId>
      <artifactId>antlr</artifactId>
      <version>2.7.6</version>
    </dependency>
    <dependency>
      <groupId>sun.jdk</groupId>
      <artifactId>tools</artifactId>
      <version>1.6.0</version>
      <scope>system</scope>
      <systemPath>${java.home}/../lib/tools.jar</systemPath>
    </dependency>
    <!-- mustang version doesn't work
    <dependency>
      <groupId>sun.jdk</groupId>
      <artifactId>javac-api</artifactId>
      <version>1.6.0-beta</version>
    </dependency>
    <dependency>
      <groupId>sun.jdk</groupId>
      <artifactId>javac-impl</artifactId>
